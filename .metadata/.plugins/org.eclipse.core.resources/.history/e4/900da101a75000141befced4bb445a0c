import java.math.BigInteger;
import java.util.Scanner;

public class ACM {

	public static void main(String[] args) {
		 Scanner sc = new Scanner(System.in);
		 int n = sc.nextInt();
		 int m = sc.nextInt();
		 BigInteger[] a = new BigInteger[n];
		
		 for (int j = 0; j < n; j++) {
		 {
		 a[j] = sc.nextBigInteger();
		 }
		 }
		 int max = 0;
		 int flag = 0;
		 for (int j = 0; j < n - 1; j++) {
		
		 for (int i = j + 1; i < n; i++) {
		 int temp = and(a[j], a[i], m);
		 if (temp > max) {
		 max = temp;
		 flag = 1;
		 } else if (temp == max) {
		 flag++;
		 }
		 }
		 }
		 System.out.println(max);
		 System.out.println(flag);
		
	}

	public static int and(BigInteger a, BigInteger b, int m) {
		int flag = 0;
		int temp = 0;
		for (int i = 0; i < m; i++) {
			//System.out.println((a % 10) + " rema " + (b % 10));
			//System.out.println((a % 10) | (b % 10));
			if ((((a.mod(BigInteger.TEN).intValue()) | (b.mod(BigInteger.TEN).intValue())) == 1) {
				flag++;
			}
			a = a / 10;
			b = b / 10;
		//	System.out.println(a + " value " + b);
		}
		return flag;
	}

	
}
