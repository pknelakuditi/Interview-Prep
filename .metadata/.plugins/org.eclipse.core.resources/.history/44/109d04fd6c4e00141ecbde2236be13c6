import java.text.DecimalFormat;
import java.util.Scanner;

public class SherlockAndSquare {

	 public static void main(String[] args) {
			Double len = (double) 1;
	        Double temp = (double)0;
	        Double m = (double)(((Math.pow(10,9)))+7);
	      	DecimalFormat format = new DecimalFormat();
	        format.setDecimalSeparatorAlwaysShown(false);
			
			

			Scanner sc = new Scanner(System.in);
			Double n = sc.nextDouble();
		

			//solidLines(time);

			sc.close();
		}
	    
	    private static void sherlock(Double[] a,Double mod){
	        	Double time;
			for (Double i1 = (double)0; i1 < n; i1++) {
				time = sc.nextDouble();
				if (time == 0) {			
	                temp=(4 )%m;
					System.out.println(format.format(temp));
				} else {				
	                temp=4+len*((Math.pow(2, time+1))%m-2)%m;
	              System.out.println(format.format(temp));
				}
			}
	    }
}
