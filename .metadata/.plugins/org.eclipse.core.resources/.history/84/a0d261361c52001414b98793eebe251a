package week.one;

import java.util.Scanner;

public class VolleyBall {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		vb(sc.nextInt(), sc.nextInt());
	}

	private static void vb(int a, int b) {
		int temp = Math.max(a, b);
		int temp2 = Math.min(a, b);
		if (temp > 25) {
			if (temp - temp2 == 2) {
				binomial(temp+temp2-1,temp2);
				return;
			} else {
                 System.out.println(0);
                 return;
			}
		}else{
			if(temp<25){
				System.out.println(0);
				return;
			}else{
				binomial(temp+temp2-1,temp2);
				return;
			}
		}
	}


	private static void binomial(int n, int k) {
		System.out.println(n+" "+k);
		long mod=1000000007;
		long temp=1;
        long temp2=1;
		while(k>0){
			temp=(temp*(n))%mod;
            temp2=(temp2*k);
			k--;
			n--;
		}
		System.out.println((temp/temp2)%mod);
	}

}
