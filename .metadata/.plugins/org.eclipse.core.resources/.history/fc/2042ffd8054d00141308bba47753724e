import java.util.Scanner;

public class AlmostSorted {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		double[] a = new double[n];
		for (int i = 0; i < n; i++) {
			a[i] = sc.nextDouble();
		}
		almostSorted(a, n);
		sc.close();
	}

	public static boolean almostSorted(double[] a, int n) {
		double[] a1 = new double[n];
		int f1 = 0, f2 = 0;
		double temp = a[0];
		for (int i = 0; i < n - 1; i++) {
			for (int k = i + 1; k < n; k++) {
				swap(i, k, a);
				if (isSorted(a)) {
					f1 = i;
					f2 = k;
					System.out.println("yes");
					System.out.print("swap ");
					System.out.print(f1 + 1);
					System.out.print(" ");
					System.out.print(f2 + 1);
					return true;
				} else {
					swap(i, k, a);
					reverse(i, k, a);
					if (isSorted(a)) {
						f1 = i;
						f2 = k;
						System.out.println("yes");
						System.out.print("reverse ");
						System.out.print(f1 + 1);
						System.out.print(" ");
						System.out.print(f2 + 1);
						return true;
					}
				}

			}

		}

		return false;
	}

	private static void reverse(int i, int j, double[] a) {
		System.out.println(i + " reverse " + j);
		while (i < j) {
			swap(i, j, a);
			j--;
			i++;
		}

	}

	private static void swap(int a, int b, double[] ar) {
		double temp = ar[a];
		ar[a] = ar[b];
		ar[b] = temp;
		// System.out.println(ar[b] + " swap " + ar[a]);
	}

	private static boolean isSorted(double[] a) { // assume is sorted, attempt
													// to
													// prove otherwise
		for (int i = 0; i < a.length - 1; i++) {

			if (a[i] > a[i + 1]) {
				return false;
			}

		}

		return true; // got to the end, must be sorted
	}
}
